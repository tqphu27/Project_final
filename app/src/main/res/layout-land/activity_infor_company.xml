<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InforCompany"
    android:background="@drawable/ux_list">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:ignore="SpeakableTextPresentCheck">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:padding="10dp"
          >
        <ImageView
            android:id="@+id/imageViewfpt"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/fpt_logo" />

        <ImageView
            android:id="@+id/imageViewviettel"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/viettel_logo" />

        <ImageView
            android:id="@+id/imageViewMicrosoft"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/microsoft_logo" />

        <ImageView
            android:id="@+id/imageViewApple"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/apple_logo" />

        <ImageView
            android:id="@+id/imageViewSS"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="-470dp"
            app:srcCompat="@drawable/samsung_logo" />

        <ImageView
            android:id="@+id/imageViewMb"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"

            app:srcCompat="@drawable/logo_mobifone" />

        <ImageView
            android:id="@+id/imageViewTencent"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="28dp"
            app:srcCompat="@drawable/tencent_logo" />

        <ImageView
            android:id="@+id/imageViewvnpt"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            app:srcCompat="@drawable/vnpt" />

        <ImageView
            android:id="@+id/imageViewsony"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="-220dp"
            app:srcCompat="@drawable/sony_logo" />

        <ImageView
            android:id="@+id/imageViewIntel"
            android:layout_width="97dp"
            android:layout_height="86dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/intel_logo" />
      </LinearLayout>
  </ScrollView>
</LinearLayout>